{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "paths": {
            "@mals/common-web/*": ["./packages/common-web/src/*"],
            "@mals/property-web/*": ["./packages/property-web/src/*"],
            "@mals/types/*": ["./packages/types/src/*"],
            "@mals/utils/*": ["./packages/utils/src/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
